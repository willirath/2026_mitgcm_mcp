&modelname
runid = 'fesom'        ! run identifier (used in output filenames)
/

&timestep
step_per_day    = 45           ! dt = 86400/45 = 1920 s
run_length      = 5            ! patched by Docker entrypoint via NDAYS argument
run_length_unit = 'd'
/

&clockinit
timenew = 0.0                  ! seconds since midnight
daynew  = 1
yearnew = 1900
/

&paths
MeshPath        = ''           ! patched by Docker entrypoint → /mesh/
ClimateDataPath = ''           ! patched by Docker entrypoint → /dev/null (not used for toy runs)
ResultPath      = ''           ! patched by Docker entrypoint → /output/
/

&restart_log
restart_length          = 1
restart_length_unit     = 'y'
raw_restart_length      = 1
raw_restart_length_unit = 'off'
bin_restart_length      = 1
bin_restart_length_unit = 'off'
logfile_outfreq         = 45   ! once per day
/

&ale_def
which_ALE        = 'linfs'
use_partial_cell = .false.
/

&geometry
cartesian      = .false.       ! spherical domain
fplane         = .false.
cyclic_length  = 60            ! 60° zonal extent (neverworld2 domain)
rotated_grid   = .false.
force_rotation = .false.
alphaEuler     = 0.
betaEuler      = 0.
gammaEuler     = 0.
/

&calendar
include_fleapyear = .false.
/

&run_config
use_ice                 = .false.
use_cavity              = .false.
use_cavity_partial_cell = .false.
use_floatice            = .false.
use_sw_pene             = .false.
flag_debug              = .false.
use_transit             = .false.
toy_ocean               = .true.
which_toy               = 'neverworld2'  ! patched by Docker entrypoint
/

&machine
n_levels = 1
n_part   = 2            ! patched by Docker entrypoint via NRANKS argument
/

&icebergs
use_icesheet_coupling = .false.
ib_num                = 1
use_icebergs          = .false.
steps_per_ib_step     = 8
ib_async_mode         = 0
/
